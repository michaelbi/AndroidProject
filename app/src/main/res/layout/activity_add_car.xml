<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.ac.jct.michaelzalman.androidproject.controller.AddCarActivity"
    style="@style/Layout_basic"
    android:layoutDirection="locale"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/CarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="locale"
        style="@style/EditTextValues"
        />

    <Spinner
        style="@style/EditTextValues"
        android:id="@+id/SpinnerCarBranchId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/car_editText_branch_id" />

    <EditText
        style="@style/EditTextValues"
        android:id="@+id/Kilometers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:maxLength="6"
        android:text="@string/kilometers" />


    <Button
        android:id="@+id/Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add" />
</LinearLayout>
</ScrollView>
